@layouts.main()
<main>
  <div class="container mx-auto flex main-container">

    <div class="products-container">
      <aside class="h-full">
        <h3 class="text-3xl">Products</h3>

        <table class="table-content" style="width:100%">
          <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Price</th>
            <th>Image URL</th>
            <th>Category</th>
          </tr>
          @each(product in products)
          <tr>
            <td>{{ product.id }}</td>
            <td>{{ product.title }}</td>
            <td>{{ product.amount }}</td>
            <td>{{ product.imageUrl }}</td>
            <td>{{ product.category.name }}</td>
          </tr>
          @end
        </table>

      </aside>
    </div>



    <div class="categories-container">
      <aside class="h-full">
        <h3 class="text-3xl">Categories</h3>

        <table class="table-content" style="width:100%">
          <tr>
            <th>Category name</th>
          </tr>
          @each(category in categories)
          <tr>
            <td>{{ category.name }}</td>
          </tr>
          @end
        </table>

      </aside>
    </div>
  </div>
</main>
@end